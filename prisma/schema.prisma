generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  email    String   @unique
  password String
  profile  Profile?
  role     Roles    @default(USER)
  createAt DateTime @default(now())

  tweets    Tweet[]
  following Follows[] @relation("Following")
  follower  Follows[] @relation("Follower")
}

model Profile {
  userId   String    @id
  name     String
  bio      String?
  image    String?
  createAt DateTime  @default(now())
  updateAt DateTime?
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Follows {
  id                Int      @id @default(autoincrement())
  followingUsername String
  followerUsername  String
  createAt          DateTime @default(now())
  following         User     @relation("Following", fields: [followingUsername], references: [username], onDelete: Cascade)
  follower          User     @relation("Follower", fields: [followerUsername], references: [username], onDelete: Cascade)

  @@unique([followerUsername, followingUsername])
}

model Tweet {
  id       Int      @id @default(autoincrement())
  username String
  text     String
  image    String?
  createAt DateTime @default(now())

  user User @relation(fields: [username], references: [username], onDelete: Cascade)
}

enum Roles {
  USER
  ADMIN
}
